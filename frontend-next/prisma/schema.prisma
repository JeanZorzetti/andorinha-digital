// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  USER
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model BlogPost {
  id        String     @id @default(cuid())
  title     String
  slug      String     @unique
  excerpt   String
  content   String?    @db.Text
  image     String
  category  String
  tags      String[]
  status    PostStatus @default(DRAFT)
  date      String
  readTime  String
  author    String
  authorId  String

  // SEO
  metaTitle       String?
  metaDescription String?
  metaKeywords    String[]

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Relação
  user User @relation("AuthorPosts", fields: [authorId], references: [id], onDelete: Cascade)

  @@map("blog_posts")
  @@index([slug])
  @@index([status])
  @@index([category])
  @@index([authorId])
}

model CaseStudy {
  id           String     @id @default(cuid())
  title        String
  slug         String     @unique
  description  String     @default("")
  content      String?    @db.Text
  client       String
  industry     String     @default("Tecnologia")
  category     String     @default("")
  duration     String?
  investment   String?
  image        String
  gallery      String[]   @default([])
  challenge    String     @db.Text
  solution     String?    @db.Text
  results      String[]   @default([])
  tags         String[]   @default([])
  technologies String[]   @default([])
  featured     Boolean    @default(false)
  date         String     @default("")
  testimonial  Json?
  metrics      Json?
  deliverables String[]   @default([])
  status       PostStatus @default(DRAFT)
  authorId     String

  // SEO
  metaTitle       String?
  metaDescription String?
  metaKeywords    String[]

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Relação
  user User @relation("AuthorCases", fields: [authorId], references: [id], onDelete: Cascade)

  @@map("case_studies")
  @@index([slug])
  @@index([status])
  @@index([category])
  @@index([authorId])
  @@index([featured])
}

model Service {
  id          String     @id @default(cuid())
  title       String
  slug        String     @unique
  description String
  content     String?    @db.Text
  image       String
  gallery     String[]   @default([])
  category    String
  tags        String[]   @default([])

  // Pricing & Process (stored as JSON)
  pricing Json // Array of PricingTier objects
  process Json // Array of ProcessStep objects

  // Details
  deliveryTime String
  includes     String[]   @default([])
  excludes     String[]   @default([])
  requirements String[]   @default([])

  // Status
  status   PostStatus @default(DRAFT)
  featured Boolean    @default(false)

  // Author
  authorId String
  user     User       @relation("AuthorServices", fields: [authorId], references: [id], onDelete: Cascade)

  // SEO
  metaTitle       String?
  metaDescription String?
  metaKeywords    String[]

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  @@map("services")
  @@index([slug])
  @@index([status])
  @@index([category])
  @@index([authorId])
  @@index([featured])
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  blogPosts     BlogPost[]     @relation("AuthorPosts")
  caseStudies   CaseStudy[]    @relation("AuthorCases")
  services      Service[]      @relation("AuthorServices")
  auditLogs     AuditLog[]     @relation("UserAuditLogs")
  notifications Notification[] @relation("UserNotifications")
  media         Media[]        @relation("UserMedia")

  @@map("users")
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
  PASSWORD_CHANGE
  ROLE_CHANGE
  PUBLISH
  UNPUBLISH
}

enum AuditResource {
  USER
  POST
  CASE
  SERVICE
  MEDIA
  SETTINGS
}

model AuditLog {
  id        String        @id @default(cuid())
  action    AuditAction
  resource  AuditResource
  resourceId String?
  details   String?       @db.Text
  ipAddress String?
  userAgent String?
  createdAt DateTime      @default(now())

  // Relação com usuário que executou a ação
  userId    String
  user      User          @relation("UserAuditLogs", fields: [userId], references: [id], onDelete: Cascade)

  @@map("audit_logs")
  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
}

enum WebhookEvent {
  USER_CREATED
  USER_UPDATED
  USER_DELETED
  POST_PUBLISHED
  POST_UNPUBLISHED
  CASE_CREATED
  SERVICE_CREATED
}

model WebhookSubscription {
  id          String        @id @default(cuid())
  name        String
  url         String
  events      WebhookEvent[]
  secret      String        // HMAC secret para verificação de assinatura
  isActive    Boolean       @default(true)
  description String?       @db.Text
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relação com logs
  logs        WebhookLog[]  @relation("SubscriptionLogs")

  @@map("webhook_subscriptions")
  @@index([isActive])
}

model WebhookLog {
  id             String              @id @default(cuid())
  subscriptionId String
  event          WebhookEvent
  payload        String              @db.Text // JSON do payload enviado
  response       String?             @db.Text // Resposta do servidor
  statusCode     Int?                // HTTP status code
  success        Boolean
  error          String?             @db.Text
  retriesCount   Int                 @default(0)
  createdAt      DateTime            @default(now())

  // Relação com subscription
  subscription   WebhookSubscription @relation("SubscriptionLogs", fields: [subscriptionId], references: [id], onDelete: Cascade)

  @@map("webhook_logs")
  @@index([subscriptionId])
  @@index([event])
  @@index([success])
  @@index([createdAt])
}

// ============================================
// NOTIFICAÇÕES IN-APP
// ============================================

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType @default(INFO)
  title     String
  message   String           @db.Text
  link      String?          // Link opcional para ação
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  // Relação com usuário
  user User @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
  @@index([userId])
  @@index([read])
  @@index([createdAt])
}

// ============================================
// MEDIA LIBRARY
// ============================================

enum MediaType {
  IMAGE
  PDF
  VIDEO
  DOCUMENT
  OTHER
}

model Media {
  id          String    @id @default(cuid())
  name        String
  url         String
  key         String    @unique // UploadThing file key
  type        MediaType
  mimeType    String
  size        Int       // Size in bytes
  width       Int?      // For images
  height      Int?      // For images
  alt         String?   // Alt text for SEO
  description String?   @db.Text
  folder      String?   // Optional folder/album organization

  // Uploader info
  uploadedById String
  uploadedBy   User   @relation("UserMedia", fields: [uploadedById], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("media")
  @@index([uploadedById])
  @@index([type])
  @@index([folder])
  @@index([createdAt])
}

// ============================================
// ANALYTICS & TRACKING
// ============================================

model PageView {
  id          String   @id @default(cuid())
  path        String
  referrer    String?
  userAgent   String?
  ipAddress   String?
  country     String?
  device      String?  // mobile, desktop, tablet
  browser     String?
  os          String?
  createdAt   DateTime @default(now())

  @@map("page_views")
  @@index([path])
  @@index([createdAt])
  @@index([country])
  @@index([device])
}

enum ConversionType {
  CONTACT_FORM
  SERVICE_REQUEST
  NEWSLETTER_SIGNUP
  CALENDLY_BOOKING
  DOWNLOAD
  OTHER
}

model Conversion {
  id        String         @id @default(cuid())
  type      ConversionType
  page      String
  value     Float?         // Optional monetary value
  metadata  Json?          // Additional data
  createdAt DateTime       @default(now())

  @@map("conversions")
  @@index([type])
  @@index([createdAt])
}

// ============================================
// SEO & REDIRECTS
// ============================================

enum RedirectType {
  PERMANENT_301
  TEMPORARY_302
}

model Redirect {
  id          String       @id @default(cuid())
  source      String       @unique // Source path (e.g., /old-page)
  destination String       // Destination path (e.g., /new-page)
  type        RedirectType @default(PERMANENT_301)
  isActive    Boolean      @default(true)
  description String?      @db.Text
  hitCount    Int          @default(0) // Track redirect usage
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("redirects")
  @@index([source])
  @@index([isActive])
}

// Site Settings - Configurações gerais do site
model SiteSettings {
  id String @id @default("singleton") // Singleton pattern - apenas um registro

  // Informações Básicas
  siteName        String  @default("Andorinha Digital")
  siteDescription String? @db.Text
  siteUrl         String  @default("https://andorinha.digital")
  contactEmail    String  @default("contato@andorinha.digital")
  supportEmail    String?
  phone           String?

  // Logo e Branding
  logo      String? // URL da logo
  favicon   String? // URL do favicon
  ogImage   String? // Open Graph default image
  
  // Localização
  timezone     String @default("America/Sao_Paulo")
  language     String @default("pt-BR")
  dateFormat   String @default("dd/MM/yyyy")
  timeFormat   String @default("HH:mm")
  
  // Redes Sociais
  facebookUrl  String?
  instagramUrl String?
  linkedinUrl  String?
  twitterUrl   String?
  youtubeUrl   String?
  
  // SEO Defaults
  defaultMetaTitle       String?
  defaultMetaDescription String? @db.Text
  defaultMetaKeywords    String[] @default([])
  
  // Analytics & Tracking
  googleAnalyticsId String?
  facebookPixelId   String?
  googleTagManager  String?
  clarityId         String?
  
  // Manutenção
  maintenanceMode    Boolean @default(false)
  maintenanceMessage String? @db.Text
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("site_settings")
}

// Email Settings - Configurações de email e SMTP
model EmailSettings {
  id String @id @default("singleton") // Singleton pattern

  // SMTP Configuration
  smtpHost     String  @default("")
  smtpPort     Int     @default(587)
  smtpUser     String  @default("")
  smtpPassword String  @default("") // Should be encrypted in production
  smtpSecure   Boolean @default(true)
  smtpFrom     String  @default("")
  smtpFromName String  @default("Andorinha Digital")

  // Email Preferences
  enableEmailNotifications Boolean @default(true)
  enableWelcomeEmail       Boolean @default(true)
  enablePasswordReset      Boolean @default(true)
  enableContactFormEmail   Boolean @default(true)
  enableNewsletterEmail    Boolean @default(true)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("email_settings")
}

enum EmailTemplateType {
  WELCOME
  PASSWORD_RESET
  CONTACT_FORM
  NEWSLETTER
  NOTIFICATION
  CUSTOM
}

model EmailTemplate {
  id      String            @id @default(cuid())
  name    String
  type    EmailTemplateType
  subject String
  body    String            @db.Text

  // Template variables documentation
  variables String[] @default([])

  // Status
  isActive Boolean @default(true)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([type])
  @@map("email_templates")
}
