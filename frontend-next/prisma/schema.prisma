// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  USER
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model BlogPost {
  id        String     @id @default(cuid())
  title     String
  slug      String     @unique
  excerpt   String
  content   String?    @db.Text
  image     String
  category  String
  tags      String[]
  status    PostStatus @default(DRAFT)
  date      String
  readTime  String
  author    String
  authorId  String

  // SEO
  metaTitle       String?
  metaDescription String?
  metaKeywords    String[]

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Relação
  user User @relation("AuthorPosts", fields: [authorId], references: [id], onDelete: Cascade)

  @@map("blog_posts")
  @@index([slug])
  @@index([status])
  @@index([category])
  @@index([authorId])
}

model CaseStudy {
  id           String     @id @default(cuid())
  title        String
  slug         String     @unique
  client       String
  category     String
  duration     String?
  investment   String?
  image        String
  challenge    String
  result       String?
  metric       String?
  solution     String?
  results      String[]
  testimonial  Json?
  deliverables String[]
  status       PostStatus @default(DRAFT)
  authorId     String

  // SEO
  metaTitle       String?
  metaDescription String?

  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Relação
  user User @relation("AuthorCases", fields: [authorId], references: [id], onDelete: Cascade)

  @@map("case_studies")
  @@index([slug])
  @@index([status])
  @@index([category])
  @@index([authorId])
}

model Service {
  id            String   @id
  title         String
  subtitle      String
  description   String
  price         String
  duration      String
  breadcrumb    String
  seo           Json
  schema        Json
  includedItems String[]
  processSteps  Json
  pricingTiers  Json
  faqItems      Json
  cta           Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("services")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  blogPosts   BlogPost[]  @relation("AuthorPosts")
  caseStudies CaseStudy[] @relation("AuthorCases")

  @@map("users")
}
